{% extends "::layout.html.twig" %}

{% block body %}
    <h1>Famille list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Famille Parente</th>
                <th>Description</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('famille_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.famille }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a class="glyphicon glyphicon-eye-open"  href="{{ path('famille_show', { 'id': entity.id }) }}"></a>
                    </li>
                    <li>
                        <a class="glyphicon glyphicon-edit" href="{{ path('famille_edit', { 'id': entity.id }) }}"></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul class="list-inline">
        <li>
            <a class="glyphicon glyphicon-plus" href="{{ path('famille_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
